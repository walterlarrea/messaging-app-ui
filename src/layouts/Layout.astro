---
import Toast from '../components/molecules/Toast/Toast'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Full blown messaging app with direct messages and channels subscription"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<slot />
		</div>
		<Toast client:only="react" />
	</body>
</html>

<script>
	import '../store/theme'
</script>

<style>
	.container {
		display: flex;
		justify-content: center;

		height: 100vh;
		max-width: 100vw;
		padding: 10px;
	}
</style>
