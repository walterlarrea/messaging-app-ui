---
import HeaderSection from '../components/organisms/HeaderSection/HeaderSection.tsx'
import AsideSection from '../components/organisms/AsideSection/AsideSection.tsx'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Full blown messaging app with direct messages and channels subscription"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="app-container">
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	.app-container {
		display: grid;
		max-height: 100%;
		min-height: 100vh;
		width: 100%;
		padding: 10px;
	}
</style>
