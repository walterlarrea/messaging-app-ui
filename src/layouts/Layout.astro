---
import HeaderSection from '../components/organisms/HeaderSection/HeaderSection.tsx'
import AsideSection from '../components/organisms/AsideSection/AsideSection.tsx'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="app-container">
			<HeaderSection />
			<div>CHAT HEADING</div>
			<AsideSection client:load />
			<slot />
			<!-- main -->
		</div>
	</body>
</html>

<style>
	.app-container {
		display: grid;
		gap: 10px;
		grid-template-columns: 2fr 5fr;
		grid-template-rows: 4rem auto;
		height: 100vh;
		padding: 10px;
	}
</style>
