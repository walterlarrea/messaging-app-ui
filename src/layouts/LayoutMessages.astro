---
import Layout from './Layout.astro'
import HeaderSection from '../components/organisms/HeaderSection/HeaderSection.tsx'
import AsideSection from '../components/organisms/AsideSection/AsideSection.tsx'
interface Props {
	title: string
}

const { title } = Astro.props
---

<Layout title={title}>
	<div class="app-container">
		<HeaderSection />
		<div>Foto contacto</div>
		<AsideSection client:load />
		<slot />
	</div>
</Layout>

<style>
	.app-container {
		display: grid;
		gap: 10px;
		grid-template-columns: 1fr 3fr;
		grid-template-rows: 4rem auto;
		height: 100%;
		width: 100%;
	}
</style>
