---
import Layout from './Layout.astro'
import HeaderSection from '../components/organisms/HeaderSection/HeaderSection.astro'
import AsideSection from '../components/organisms/AsideSection/AsideSection.tsx'
import MessagesHeader from '../components/organisms/MessagesHeader/MessagesHeader'
interface Props {
	title: string
}

const { title } = Astro.props
---

<Layout title={title}>
	<div class="app-container">
		<HeaderSection />
		<!-- <div class="p-4 bg-[--secondary]">Foto contacto</div> -->
		<MessagesHeader client:only="react" />
		<AsideSection client:only="react" />
		<slot />
	</div>
</Layout>

<script src="../utils/wsGlobalHandler.ts"></script>

<style>
	.app-container {
		display: grid;
		gap: 0 1px;
		grid-template-columns: 1fr 3fr;
		grid-template-rows: 4rem auto;

		width: 100%;
		max-width: 1643px;
		background-color: var(--border);
	}
</style>
